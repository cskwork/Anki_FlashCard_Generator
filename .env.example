# LLM 제공자 설정
LLM_PROVIDER=ollama

# OpenAI 설정
OPENAI_API_KEY=YOUR-OPENAI-API-KEY
OPENAI_MODEL=gpt-3.5-turbo

# Ollama 설정
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenRouter 설정
OPENROUTER_API_KEY=YOUR-OPENROUTER-API-KEY
OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free

# 공통 LLM 설정
MAX_RETRIES=3
RETRY_DELAY=2
TEMPERATURE=0.3
MAX_TOKENS=2048

# 플래시카드 생성 설정
CARDS_PER_SECTION=5
MIN_CARD_QUALITY=0.7

# 커스텀 API 설정 (localhost:3284) - agentapi claude code 
CUSTOM_API_BASE_URL=http://localhost:3284
CUSTOM_API_ENABLED=true
CUSTOM_API_TIMEOUT=30 